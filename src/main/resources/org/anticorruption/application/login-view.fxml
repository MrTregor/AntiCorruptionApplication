<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="CENTER" spacing="20.0"  styleClass="background"
      xmlns:fx="http://javafx.com/fxml" fx:controller="org.anticorruption.application.Controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Вход в систему" styleClass="title-label">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <TextField fx:id="usernameField" promptText="Логин" styleClass="input-field"/>
    <PasswordField fx:id="passwordField" promptText="Пароль" styleClass="input-field"/>

    <Button text="Войти" onAction="#onLoginButtonClick" styleClass="login-button"/>
</VBox>
